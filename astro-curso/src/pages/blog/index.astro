---
import Layout from "../../components/Layout.astro";

import bgImage from "../../images/tux.jpg";

const post = await Astro.glob("./post/*.md");
---

<Layout
  pageTitle="Blog de Desarrollo"
  pageDescription="Tutoriales de desarrolo y programacion."
>
  <h1>Blog</h1>

  <!-- cargar imagenes en astro  -->
  <!-- Importamos las imagenes siempre con src={varImg.src} -->

  <img width="200" src={bgImage.src} alt="Imagen nvim" />

  <!-- devolvemos las url recorrida por map, para mostrar por el frontend -->
  {
    post.map((post) => {
      return (
        <a href={post.url} class="link">
          {post.frontmatter.title}
        </a>
      );
    })
  }

  <style>
    .link {
      background-color: wheat;
      color: crimson;
      text-decoration: none;
      display: block;
      margin-bottom: 4px;
      font-weight: bold;
    }
  </style>
</Layout>
