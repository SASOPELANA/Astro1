---
const response = await fetch("https://jsonplaceholder.typicode.com/posts");

const posts = await response.json();
---

<h1>Mis publicaciones</h1>

{
  posts.map((post) => (
    <div>
      <h4>{post.userId}</h4>
      <h2 class="title">{post.title}</h2>
      <p style="color: #333;">{post.body}</p>
    </div>
  ))
}

<style>
  .title {
    color: skyblue;
  }
</style>
