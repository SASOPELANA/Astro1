---
interface Props {
  title?: string;
  content?: string;
}

const { title = "Default title", content = "Default content" } = Astro.props;
---

<!-- Integracion de tailwind en astro -->
<div class="bg-sky-500 p-4 m-2 mb-3">
  <h1>{title}</h1>
  <p>{content}</p>
</div>

